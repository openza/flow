# Auto detect text files and normalize to LF in repo
* text=auto eol=lf

# Force LF for source files
*.dart text eol=lf
*.cc text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.cmake text eol=lf
*.swift text eol=lf
*.java text eol=lf
*.kt text eol=lf
*.gradle text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.xml text eol=lf
*.plist text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.sh text eol=lf

# Windows-specific files use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.ico binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ttf binary
*.otf binary
